= form_for @legal_person do |f|
  - if @legal_person.errors.any?
    .alert.alert-danger
      %h2= "Erro ao salvar."
      %ul
        - @legal_person.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nome, 'Nome Fantasia: '
    = f.text_field :nome, class: 'form-control'
  .form-group
    = f.label :cnpj, 'CNPJ: '
    = f.text_field :cnpj, class: 'form-control'


  .actions
    = f.submit 'Save', class: 'btn btn-success'
