= form_for @physical_person do |f|
  - if @physical_person.errors.any?
    .alert-danger
      %h2= "#{pluralize(@physical_person.errors.count, "error")} prohibited this physical_person from being saved:"
      %ul
        - @physical_person.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nome, 'Nome Completo: '
    = f.text_field :nome, class: 'form-control'
  .form-group
    = f.label :cpf, 'CPF: '
    = f.text_field :cpf, class: 'form-control'
  .form-group
    = f.label :nascimento
    = f.date_select :nascimento, class: 'form-control'

  .actions
    = f.submit 'Save', class: 'btn btn-success'
