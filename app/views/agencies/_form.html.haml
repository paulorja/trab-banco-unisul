= form_for @agency do |f|
  - if @agency.errors.any?
    .alert.alert-danger
      %h2= "Erro ao salvar."
      %ul
        - @agency.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nome
    = f.text_field :nome, class: 'form-control'
  .form-group
    = f.label :numero
    = f.text_field :numero, class: 'form-control'

  .actions
    = f.submit 'Salvar', class: 'btn btn-success'