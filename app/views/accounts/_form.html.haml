= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %u
        - @account.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :agency_id, 'Agencia'
    = f.select :agency_id, options_for_select(agencies_options)

  %div
    = f.label :tipo, 'Tipo'
    = f.select :tipo, options_for_select(tipos_options)

  %div
    = f.label :person_id, 'Pessoa'
    = f.select :person_id, options_for_select(physical_people_options+legal_people_options)
    - if @account.errors.messages.include? :incomplete_address
      = link_to 'Corrigir Endere√ßo', edit_address_path(@account.person.id), target: '_blank'
  .actions
    = f.submit 'Salvar'
